name = input('Digite seu nome: ')
prod = input('Digite o produto comprado: ')
price = float(input('Qual o valor do produto selecionado: '))
prod_buy = int(input('Quanto(s) {}(s) foram comprado(s): '.format(prod)))
calc = prod_buy * price
print ('Olá {} seja bem vindo (a) o seu produto {} possui o valor de {} e como voce comprou {} o valor é de: {} R$'.format(name,prod,price,prod_buy,calc))
compra = int(input('Vai comprar? Responda com 1 para sim ou 2 para não: '))
if compra == 1:
    print('Obrigado pela compra volte sempre !')
elif compra == 2:
    print('Entendemos sua escolha {} esperamos ver você novamente!'.format(name))
print('Operação encerrada!')